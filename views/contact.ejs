<%- layout('layout') -%>

<form method="POST">
  <fieldset>
    <legend>Contact Us</legend>
    <p class="lead">Worried about yer digital identity, or spam?</p>
    <p>Check out our <a href="/privacy">privacy statement</a>. We think you will like it.</p>

    <div class="control-group">
      <label class="control-label" for="name">Name</label>
      <div class="control"><input value="<%= vals.name %>" required class="input-block-level" placeholder="Your Name" type="text" name="name" id="name" /></div>
    </div>

    <div class="control-group">
      <label class="control-label" for="email">Email</label>
      <div class="control"><input value="<%= vals.email %>" required type="email" class="input-block-level" placeholder="me@mine.com" type="text" name="email" id="email" /></div>
    </div>

    <div class="control-group">
      <label class="control-label" for="message">Message</label>
      <div class="control"><textarea required class="input-block-level" rows="6" placeholder="Wow, you guys are rad. I want that rad for myself." name="message" id="message"><%= vals.message %></textarea></div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="captcha">Human?</label>
      <div class="control"><%- recaptcha_form %></div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button class="btn btn-primary"><i class="icon-envelope"></i> Say Hi</button>
      </div>
    </div>
  </fieldset>
</form>
